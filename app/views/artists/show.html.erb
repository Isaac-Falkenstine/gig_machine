<h1><%= @artist.name %></h1>
<section>
  <img src="<%= @artist.img %>"></br>
  <%= @artist.bio %>
  <%= @artist.link %>
</section><br>

<% if current_user && current_user.id == @artist.user_id %>
<%= link_to "Edit Artist Profile", edit_artist_path(@artist) %>
<% end %><br>
<% if current_admin? %>
<p><%=link_to "Edit #{@artist.name}", edit_admin_artist_path %></p><br>
<p><%= link_to "Add #{@artist.name} to an event", new_admin_artist_artists_event_path(@artist) %>
<% end %>
