<h1><%= "Edit information for #{@artist.name}" %>

  <section>
    <%= form_for @artist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.label :link %>
    <%= f.text_field :link %>
    <%= f.label :img %>
    <%= f.text_field :img %>
    <%= f.submit %>
    <% end %>
  </section>
