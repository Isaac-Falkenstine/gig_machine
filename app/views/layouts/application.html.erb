<!DOCTYPE html>
<html>
  <head>
    <title>GigMachine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Playball" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Wire+One" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
    <nav>
      <%= link_to 'Dashboard', dashboard_index_path %>

      <% if current_user && current_user.admin?  %>
        <%= link_to 'All Venues', admin_venues_path %>
      <% else %>
        <%= link_to 'All Venues', venues_path %>
      <% end %>


        <%= link_to 'All Events', events_path %>

      <% if current_user && current_user.admin? %>
        <%= link_to 'All Artists', admin_artists_path %>
      <% else %>
        <%= link_to 'All Artists', artists_path %>
      <% end %>

    </nav>
      <aside class='right-align'>
        <% if current_user %>
        <%= link_to 'Log out', logout_path %>
        <% else %>
        <%= link_to 'Log in', login_path %>
        <% end %>
      </aside>
    </header>
    <%= yield %>
  </body>
</html>
